<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wood.sql.teacherMapper">

	<resultMap type="Teacher" id="TeacherMap">
		<id column="teacherid" property="teacherId" jdbcType="INTEGER" />
		<result column="teachername" property="teacherName" jdbcType="VARCHAR" />
	</resultMap>

	<select id="selectAllTeachers" resultMap="TeacherMap">
		select teacher_id, teacher_name from teacher;
	</select>

	<insert id="insertTeacher" useGeneratedKeys="true" keyProperty="teacherid"
		parameterType="Teacher">
		insert into teacher(teacherId, teacherName) values(null, #{teacherName, jdbcType=VARCHAR});
	</insert>
</mapper>